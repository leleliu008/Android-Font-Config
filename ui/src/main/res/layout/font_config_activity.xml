<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:paddingLeft="@dimen/dp750_30"
        android:paddingRight="@dimen/dp750_30"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/text1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp750_40" />


        <TextView
            android:id="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp750_100"
            android:gravity="center"
            android:text="@string/text2"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp750_40" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp750_100"
            android:gravity="center"
            android:text="@string/text3"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp750_40" />
    </LinearLayout>

    <TextView
        android:id="@+id/applyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/dp750_250"
        android:minHeight="@dimen/dp750_80"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp750_100"
        android:background="@android:color/black"
        android:gravity="center"
        android:text="@string/btn_apply"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp750_30" />

</LinearLayout>